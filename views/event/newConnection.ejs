<%- include('../partials/title.ejs') %>
<title>Create</title>
<%- include('../partials/header.ejs') %>

    <div class="content">
        <h2>Create a new connection</h2>
    </div>

    <div class="container">
        <form method = "POST" action="/event">
          <div class="row">
            <div class="col-25">
              <label for="topic">Topic </label>
            </div>
            <div class="col-25">
              <input type="text" id="topic" name="topic" placeholder="Choose a topic.." required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="title">Title </label>
            </div>
            <div class="col-25">
              <input type="text" id="title" name="title" placeholder="Give a title" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="details">Details</label>
            </div>
            <div class="col-25">
              <textarea id="details" name="details" placeholder="Event details" style="height: 100px" minLength='10' required></textarea>
            </div>
            </div>
          <div class="row">
            <div class="col-25">
              <label for="location">Location</label>
            </div>
            <div class="col-25">
              <input type="text" id="location" name="location" placeholder="Choose a location" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="date">Date</label>
            </div>
            <div class="col-25">
              <input type="date" id="date" name="date" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="start">Start</label>
            </div>
            <div class="col-25">
              <input type="time" id="start" name="start" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="end">End</label>
            </div>
            <div class="col-25">
              <input type="time" id="end" name="end" required>
            </div>
            </div>
            <div class="row">
                <div class="col-25">
                  <label for="imageURL">Image URL</label>
                </div>
                <div class="col-25">
                  <input type="url" id="imageURL" name="imageURL" placeholder="https://" required>
                </div>
            </div>
          <div class="row">
            <input type="submit" value="Create">
          </div>
        </form>
      </div>

      <%- include('../partials/footer.ejs') %>
